generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id                String       @id @default(uuid())
  email             String       @unique
  password          String
  name              String?
  words             Vocabulary[]
  grammarCards      GrammarCard[]
  dailyNewWordGoal     Int          @default(20)
  dailyNewGrammarGoal  Int          @default(10)
  streakCount          Int          @default(0)
  lastGoalMetDate      DateTime?
  points               Int          @default(0)
  streakFreeze         Int          @default(0)
  createdAt         DateTime     @default(now())
  securityQuestion  String?
  securityAnswer    String?
}

model Vocabulary {
  id            String   @id @default(uuid())
  word          String
  wordType      String?  // Noun, Verb, Adj, etc.
  meaning       String
  pronunciation String?
  example       String?
  synonyms      String?
  
  // Rule-based fields
  importanceScore Int      @default(0) // 0-4 points
  source          String   @default("COLLECTION") // COLLECTION or TEST
  isDeferred      Boolean  @default(false)

  // SRS fields
  nextReview    DateTime @default(now())
  interval      Int      @default(0)
  repetition    Int      @default(0)
  efactor       Float    @default(2.5)

  // Relation to User
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([word, userId])
  @@index([userId, nextReview])
  @@index([userId, repetition])
  @@index([userId, updatedAt])
}

model GrammarCard {
  id            String   @id @default(uuid())
  type          String   // CLOZE, PRODUCTION, ERROR_CORRECTION, MCQ, TRANSFORMATION, EXPLANATION
  prompt        String   
  answer        String   
  options       String?  
  hint          String?  
  explanation   String?  
  tags          String?  

  // Rule-based fields
  importanceScore Int      @default(0)
  source          String   @default("COLLECTION")
  isDeferred      Boolean  @default(false)

  // SRS fields
  nextReview    DateTime @default(now())
  interval      Int      @default(0)
  repetition    Int      @default(0)
  efactor       Float    @default(2.0)

  // Relation to User
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId, nextReview])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
}
